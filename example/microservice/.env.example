STEM_BROKER_URL=rediss://redis:6379/0
STEM_RESULT_BACKEND_URL=rediss://redis:6379/1
STEM_SCHEDULE_STORE_URL=rediss://redis:6379/2
# Optional override for the HTTP port exposed by the enqueuer service
PORT=8443

# Payload signing (comma-separated keyId:base64Secret pairs). Replace the sample secret.
STEM_SIGNING_KEYS=primary:aGVsbG8tc3RlbS1zaWduaW5nLXNlY3JldA==
STEM_SIGNING_ACTIVE_KEY=primary
# To use Ed25519 signing instead, uncomment the block below and provide new keys.
# STEM_SIGNING_ALGORITHM=ed25519
# STEM_SIGNING_PUBLIC_KEYS=primary:<base64-public>
# STEM_SIGNING_PRIVATE_KEYS=primary:<base64-private>

# TLS configuration (paths inside the container after mounting certs)
STEM_TLS_CA_CERT=/certs/ca.crt
STEM_TLS_CLIENT_CERT=/certs/client.crt
STEM_TLS_CLIENT_KEY=/certs/client.key

# Optional HTTPS configuration for the enqueue API
ENQUEUER_TLS_CERT=/certs/server.crt
ENQUEUER_TLS_KEY=/certs/server.key
ENQUEUER_TLS_CLIENT_CA=/certs/ca.crt

# Path to the schedule seed file consumed by the beat service
STEM_SCHEDULE_FILE=/config/schedules.yaml
