import "../Justfile.common"

ROOT := justfile_directory()

COMPOSE_FILE := env_var_or_default("COMPOSE_FILE", "docker-compose.yml")
DEPS_SERVICES := env_var_or_default("DEPS_SERVICES", "redis mailhog")
BUILD_DIR := env_var_or_default("BUILD_DIR", "build")
ENV_FILE := env_var_or_default("ENV_FILE", ".env.local")
SESSION := env_var_or_default("SESSION", "stem-email-service")
PROJECT_NAME := env_var_or_default("PROJECT_NAME", SESSION)
COMPOSE_ENV := "REDIS_PORT=" + REDIS_PORT + " " + "SMTP_PORT=" + SMTP_PORT + " " + "MAILHOG_UI_PORT=" + MAILHOG_UI_PORT
SMTP_PORT := env_var_or_default("SMTP_PORT", "1025")
MAILHOG_UI_PORT := env_var_or_default("MAILHOG_UI_PORT", "8025")
REDIS_PORT := env_var_or_default("REDIS_PORT", "6379")



build-enqueuer:
    dart pub get
    dart build cli -t bin/enqueuer.dart -o "{{BUILD_DIR}}/enqueuer"

build-worker:
    dart pub get
    dart build cli -t bin/worker.dart -o "{{BUILD_DIR}}/worker"

build: build-enqueuer build-worker

run-enqueuer:
    if [ -f "{{ENV_FILE}}" ]; then set -a; . "{{ENV_FILE}}"; set +a; elif [ -f "{{ROOT}}/{{ENV_FILE}}" ]; then set -a; . "{{ROOT}}/{{ENV_FILE}}"; set +a; fi; export REDIS_PORT="${REDIS_PORT:-6379}"; export STEM_BROKER_URL="${STEM_BROKER_URL:-redis://localhost:${REDIS_PORT}/0}"; export STEM_RESULT_BACKEND_URL="${STEM_RESULT_BACKEND_URL:-redis://localhost:${REDIS_PORT}/1}"; export STEM_DEFAULT_QUEUE="${STEM_DEFAULT_QUEUE:-emails}"; export STEM_ROUTING_CONFIG="${STEM_ROUTING_CONFIG:-{{ROOT}}/routing.yaml}"; export SMTP_HOST="${SMTP_HOST:-localhost}"; export SMTP_PORT="${SMTP_PORT:-1025}"; "{{BUILD_DIR}}/enqueuer/bundle/bin"/*

run-worker:
    if [ -f "{{ENV_FILE}}" ]; then set -a; . "{{ENV_FILE}}"; set +a; elif [ -f "{{ROOT}}/{{ENV_FILE}}" ]; then set -a; . "{{ROOT}}/{{ENV_FILE}}"; set +a; fi; export REDIS_PORT="${REDIS_PORT:-6379}"; export STEM_BROKER_URL="${STEM_BROKER_URL:-redis://localhost:${REDIS_PORT}/0}"; export STEM_RESULT_BACKEND_URL="${STEM_RESULT_BACKEND_URL:-redis://localhost:${REDIS_PORT}/1}"; export STEM_DEFAULT_QUEUE="${STEM_DEFAULT_QUEUE:-emails}"; export STEM_ROUTING_CONFIG="${STEM_ROUTING_CONFIG:-{{ROOT}}/routing.yaml}"; export SMTP_HOST="${SMTP_HOST:-localhost}"; export SMTP_PORT="${SMTP_PORT:-1025}"; "{{BUILD_DIR}}/worker/bundle/bin"/*

run: run-enqueuer

clean:
    rm -rf "{{BUILD_DIR}}"

tmux:
    {{JUST}} tmux-guard
    {{JUST}} tmux-prep
    tmux new-session -d -s "{{SESSION}}" -n app "cd \"{{ROOT}}\" && {{JUST}} run-worker"
    tmux split-window -t "{{SESSION}}:app" -v "cd \"{{ROOT}}\" && {{JUST}} run-enqueuer"
    tmux select-layout -t "{{SESSION}}:app" even-vertical
    {{JUST}} tmux-attach
