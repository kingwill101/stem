{
  "id": null,
  "uid": "stem-metrics",
  "title": "STEM Worker Metrics",
  "tags": [
    "stem",
    "worker",
    "metrics"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "panels": [
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "title": "Task Execution Rate (per minute)",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(stem_task_duration_seconds_count[1m]) * 60",
          "legendFormat": "{{task}} - {{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Tasks/min"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "title": "Average Task Duration",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(stem_task_duration_seconds_sum[1m]) / rate(stem_task_duration_seconds_count[1m])",
          "legendFormat": "{{task}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 8
      },
      "id": 3,
      "title": "Total Tasks Executed",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(stem_task_duration_seconds_count)",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 1000
              }
            ]
          }
        }
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 8
      },
      "id": 4,
      "title": "Tasks per Status",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (status) (stem_task_duration_seconds_count)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "pieType": "pie",
        "displayLabels": [
          "percent"
        ]
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 8
      },
      "id": 5,
      "title": "Current Execution Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(stem_task_duration_seconds_count[1m]) * 60",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "green",
                "value": 30
              }
            ]
          }
        }
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "id": 6,
      "title": "Task Duration Percentiles",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(stem_task_duration_seconds_bucket[1m])) by (le, task))",
          "legendFormat": "p50 - {{task}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.90, sum(rate(stem_task_duration_seconds_bucket[1m])) by (le, task))",
          "legendFormat": "p90 - {{task}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(stem_task_duration_seconds_bucket[1m])) by (le, task))",
          "legendFormat": "p99 - {{task}}",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "id": 7,
      "title": "Tasks by Queue",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (queue) (rate(stem_task_duration_seconds_count[1m]))",
          "legendFormat": "{{queue}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Tasks/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "id": 8,
      "title": "Tasks by Worker",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (worker) (rate(stem_task_duration_seconds_count[1m]))",
          "legendFormat": "{{worker}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Tasks/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h"
    ]
  }
}
